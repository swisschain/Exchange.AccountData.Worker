<Configuration>
    <Appenders>
        <Console name="ConsoleLog">
            <PatternLayout>
                <Pattern>%d{dd-MM HH:mm:ss:SSS} %p [%t] [%c{1}] %m%n</Pattern>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="debug" additivity="false">
            <AppenderRef ref="ConsoleLog"/>
        </Root>

        <Logger name="com.me" level="debug" additivity="false">
            <AppenderRef ref="ConsoleLog"/>
        </Logger>
    </Loggers>
</Configuration>